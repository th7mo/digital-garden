---
import type { CollectionEntry } from "astro:content";
import AlphabetNavigationLetter from "@components/AlphabetNavigationLetter.astro";

interface Props {
    notes: CollectionEntry<"notes">[];    
}
const { notes } = Astro.props;

const ALPHABET_NAVIGATION_LETTER_SIZE = "2.9rem";
const letters = [...new Set(notes.map(note => note.slug.charAt(0).toLowerCase()))];
---

<ol>
    {letters.map((letter) => (
        <AlphabetNavigationLetter
            letter={letter}
            size={ALPHABET_NAVIGATION_LETTER_SIZE}
        />
    ))}
</ol>

<style define:vars={{ ALPHABET_NAVIGATION_LETTER_SIZE }}>
    ol {
        margin: var(--spacing-lg) 0 calc(2 * var(--spacing-lg)) 0;
        padding: 0;
        display: grid;
        gap: var(--spacing-sm);
        grid-template-columns: repeat(auto-fill, var(--ALPHABET_NAVIGATION_LETTER_SIZE));
        justify-content: space-between;
        list-style: none;
    }
</style>
