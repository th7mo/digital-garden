---
import BreadcrumbNavigationItem from "@components/BreadcrumbNavigationItem.astro";

/* remove forward slashes if first or last character */
const currentPagePath = Astro.url.pathname.replace(/^\/|\/$/g, "");
const breadcrumbItems = [{ href: "/", displayText: "th7mo" }];

currentPagePath.split("/").forEach((pathPart, index, array) => {
    const href = `/${array.slice(0, index + 1).join("/")}/`;
    const displayText = pathPart.replaceAll("-", " ");
    breadcrumbItems.push({ href, displayText });
});
---

<header>
    <nav>
        <ol>
            {breadcrumbItems.map((item) => (
                <BreadcrumbNavigationItem {...item} />
            ))}
        </ol>
    </nav>
</header>

<style>
    header {
        top: 0;
        position: sticky;
        padding: var(--spacing-md) 0;
        margin: var(--layout-xl) 0;
        background-color: var(--color-background);
        z-index: 1;
    }

    ol {
        display: flex;
        padding: 0;
        flex-wrap: wrap;
        list-style: none;
        user-select: none;
        -webkit-user-select: none;
        font-size: var(--body-lg);
    }
</style>
