---
import Layout from "@layouts/Layout.astro";
import NavigationCardList from "@components/NavigationCardList.svelte";
import NavigationCard from "@components/NavigationCard.svelte";

const title = "Hi.";
const description = "I have no idea what I'm doing";
---

<Layout title={title} description={description}>
    <p>{description} :)</p>
    <section>
        <NavigationCardList>
            <NavigationCard title="My Notes" description="A collection of my scattered thoughts" href="/notes" iconPath="/images/directory.svg" />
            <NavigationCard title="Meta" description="About the th7mo.com website" href="/meta" iconPath="/images/directory.svg" />
        </NavigationCardList>
        <NavigationCardList>
            <NavigationCard title="GitHub" href="https://github.com/th7mo" />
            <NavigationCard title="Merveilles Webring" href="https://lieu.cblgh.org" />
            <NavigationCard title="SoundCloud" href="https://soundcloud.com/media-361805444" />
        </NavigationCardList>
    </section>
</Layout>

<style>
    section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(var(--layout-xl), 1fr));
        gap: var(--spacing-lg);
    }
</style>
