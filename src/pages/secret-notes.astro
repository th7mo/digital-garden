---
import { getCollection } from "astro:content";
import NotesOverview from "@layouts/NotesOverview.astro";

const notes = await getCollection("notes", ({ data }) => {
    return !data.isPublic;
});
---

<NotesOverview
    title="My Secret Notes"
    description="A collection of my more private scattered thoughts"
    notes={notes}
></NotesOverview>
