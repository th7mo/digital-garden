---
interface Props {
    title: string;
    description: string;
    slug: string;
}
const { title, description, slug } = Astro.props;
---

<a
    class="navigation-card"
    href={`${Astro.url.pathname.replace(".html", "")}/${slug}`}
>
    {title}
    <p>{description}</p>
</a>

<style>
    a {
        font-size: var(--body-lg);
        padding: var(--spacing-md);
        display: block;
        height: 100%;
    }

    a p {
        font-size: var(--body-sm);
        font-weight: 400;
        text-align: start;
        hyphens: none;
    }
</style>
