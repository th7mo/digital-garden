---
import Layout from "../layouts/Layout.astro";
import "../styles/variables.css";

const title = "Colors";
const description = "All the colors used on the this website";
---

<Layout title={title} description={description}>
    <h1>{title}</h1>
    <p>{description}:</p>
    <ol>
        <li id="color-foreground">foreground</li>
        <li id="color-background">background</li>
        <li id="color-surface">surface</li>
        <li id="color-overlay">overlay</li>
    </ol>
</Layout>

<style>
    ol {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-md);
        list-style: none;
        padding: 0;
    }

    li {
        padding: var(--spacing-sm);
        aspect-ratio: 1 / 1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-style: italic;
    }

    #color-foreground::selection {
        color: var(--color-foreground);
        background-color: var(--color-background);
    }

    #color-foreground {
        color: var(--color-background);
        background-color: var(--color-foreground);
    }

    #color-background {
        background-color: var(--color-background);
        border: 1.5px solid var(--color-foreground);
    }

    #color-surface {
        background-color: var(--color-surface);
        border: 1.5px solid var(--color-foreground);
    }

    #color-overlay {
        background-color: var(--color-overlay);
        border: 1.5px solid var(--color-foreground);
    }
</style>
