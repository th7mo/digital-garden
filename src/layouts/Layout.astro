---
import Head from "./Head.astro";
import Breadcrumb from "./Breadcrumb.astro";

import "../styles/fonts.css";
import "../styles/variables.css";
import "../styles/base.css";
import "../styles/links.css";
import "../styles/headings.css";
import "../styles/navigation.css";
import "../styles/code.css";
import "../styles/misc.css";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <Head title={title} description={description}/>
    <body>
        <Breadcrumb />
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
        scroll-padding-top: 4.5rem;
    }

    body {
        overflow-y: scroll;
        overflow-wrap: break-word;
        hyphens: auto;
        -webkit-hyphens: auto;
        margin: auto;
        max-width: 75ch;
        padding: 0 var(--spacing-md);
        background: var(--color-background);
        line-height: 1.5;
        font-size: var(--body-md);
        font-family: var(--font-primary);
    }

    main {
        /* Make whitespace below main content same as <Breadcrumb> navigation height:

                             ┌ margin-above ┐   ┌ padding-above ┐   ┌ font-size ┐    ┌ padding-below ┐   ┌ margin-below ┐ */
        padding-bottom: calc(var(--layout-xl) + var(--spacing-md) + var(--body-lg) + var(--spacing-md) + var(--layout-xl));
    }
</style>
