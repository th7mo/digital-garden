---
import NoteNavigationItem from "./NoteNavigationItem.astro";

const { notes } = Astro.props;

const letters = [...new Set(notes.map(note => note.slug.charAt(0).toLowerCase()))];
---

<ol>
    {letters.map((letter) => (
        <NoteNavigationItem letter={letter}></NoteNavigationItem>
    ))}
</ol>

<style>
    ol {
        margin-top: var(--spacing-lg);
        display: grid;
        padding: 0;
        gap: var(--spacing-md);
        grid-template-columns: repeat(auto-fill, 3rem);
        justify-content: space-between;
        list-style: none;
    }
</style>
