---
const path = Astro.url.pathname;
---

<header>
    <nav>
        <ol>
            <li><a href="/">th7mo</a></li>
            {
                path.split("/").filter(part => part !== "").map((pathPart, index, array) => (
                    <li><a href={`/${array.slice(0, index + 1).join("/")}`}>{pathPart}</a></li>
                ))
            }
        </ol>
    </nav>
</header>

<style>
    header {
        top: 0;
        position: sticky;
        padding: var(--spacing-md) 0;
        margin: var(--layout-xl) 0;
        background-color: var(--color-background);
    }

    ol {
        display: flex;
        padding: 0;
        flex-wrap: wrap;
        list-style: none;
        user-select: none;
        -webkit-user-select: none;
    }

    li:not(:last-child)::after {
        padding: 0 var(--spacing-sm);
        content: "/";
    }

    li:last-child a {
        font-weight: bold;
    }

    a {
        text-decoration: none;
        font-weight: normal;
    }
</style>
